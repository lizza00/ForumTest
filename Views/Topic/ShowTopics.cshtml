@model WebApp.Models.SearchingTopics

@{
    ViewBag.Title = "ShowTopics";
}

<h2>ShowTopics</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>SearchingTopics</h4>
        <hr />
        <table class="table">
            <tr><td width="60%">Topic</td><td>Author</td><td>Date</td></tr>
            @foreach (WebApp.Models.Topic i in ViewBag.list)
            {
            <tr><td>@Html.ActionLink(i.Name, "ViewTopic", "ViewTopic", new { Name = i.Name,Author=i.Author,Date=i.Date},null)</td><td>@i.Author</td><td>@i.Date</td></tr>
            }
        </table>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default"  />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
